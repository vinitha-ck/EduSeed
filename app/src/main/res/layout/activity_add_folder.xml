<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Toolbar at the top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_gradient"
        app:logo="@drawable/baseline_admin_panel_settings_24"
        app:title="Admin panel"
        app:titleMarginStart="25dp"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/CustomToolbarTitleText" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="5dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>



    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/folder"
            android:layout_marginEnd="9dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Folder"
            android:fontFamily="@font/poppins"
            android:layout_marginEnd="60dp"
            android:textColor="@color/blue"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/access_admin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/admin"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Access Admin"
            android:layout_marginEnd="30dp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/enrollment"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/enrollment"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enrollment"
            android:layout_marginEnd="60dp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/report"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/report"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:layout_marginEnd="95dp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stud_enroll"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/student"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Details"
            android:layout_marginEnd="28dp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instructor_report"
        android:padding="12dp"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true"
        android:elevation="4dp">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/report"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Report"
            android:layout_marginEnd="95dp"
            android:textColor="@color/blue"
            android:textSize="18sp"
            android:fontFamily="@font/poppins"/>
    </LinearLayout>


</LinearLayout>
</LinearLayout>